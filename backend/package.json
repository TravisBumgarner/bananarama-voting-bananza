        "axios": "^1.2.2",
        "eslint": "^8.10.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.4",
        "jest": "^29.3.1",
        "ts-jest": "^29.0.3",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.4"
