        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.2",
        "express-graphql": "^0.12.0",
        "graphql": "^16.3.0",
        "graphql-subscriptions": "^2.0.0",
        "graphql-ws": "^5.11.2",
        "runtypes": "^6.5.0",
        "ts-node": "^10.4.0",
        "typeorm": "^0.2.41",
        "uuid": "^8.3.2",
        "ws": "^8.11.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jest": "^29.2.4",
